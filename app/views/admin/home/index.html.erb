<script type='text/javascript'>
	$('document').ready(function(){
		$('.home_search_task_link , .home_search_issue_link').click(function(e){
			if ($(this).hasClass('home_search_task_link')){
				$('.search_task_link').css("display","block");
				$('.search_task_link').css("color","grey");
				$('.search_issue_link').css("display","none");
				$('#task_radio').attr('checked', 'checked');
			}
			else{
				$('.search_task_link').css("display","none");
				$('.search_issue_link').css("display","block");
				$('#issue_radio').attr('checked','checked');
			}
		});
	});
</script>
