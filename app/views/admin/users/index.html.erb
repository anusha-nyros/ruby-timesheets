<%= render :partial => "menu" %>
<ul style="list-style:none">
<li class="pull-left"><h1>Users</h1></li>
<li class="pull-right" style="padding-top:10px"><%= link_to "Send Join Email", new_invitation_path , class: 'btn btn-primary btn-mini pull-right' %></li>
</ul><br/>
<% if @users.blank? %>
  <div class="well">
    There is currently no user!
  </div>
<% else %>  
  <table class="table table-striped">
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Group</th>
        <th>Active</th>    
        <th> Last Login At</th>
        <th> Created At</th>
        <th></th>
      </tr>
    <% for user in @users %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.group %></td>
        <td><%= user.active? ? 'Yes' : 'No' %></td>
        <td><%= user.last_login_at.strftime("%b-%d-%Y %H:%M:%S") if !user.last_login_at.blank? %></td>
        <td><%= user.created_at.strftime("%b-%d-%Y %H:%M:%S")  %></td>
        <td>
          <%= link_to "edit", edit_admin_user_path(user), class: 'btn btn-mini' %>
          <%= link_to "delete", admin_user_path(user), class: 'btn btn-mini btn-danger', method: 'delete', confirm: "Delete this record?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>