<%= render :partial => "menu" %>
<%= link_to 'New Skill', new_skill_path, class: 'btn btn btn-primary' %>
<br>
<br>
<% if @skills.blank? %>
  <div class="well">You don't currently have any skill </div>
  <% else %>
 <h1>Skills</h1> 
<table class="table table-striped" >
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.name %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill), class: 'btn btn-mini' %>
    <%= link_to 'Destroy', skill, confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<% end %>
