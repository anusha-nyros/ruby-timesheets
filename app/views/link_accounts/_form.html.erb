<%= simple_form_for(@link_account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :source %>
    <%= f.input :target %>
    <%= f.input :source_id %>
    <%= f.input :target_id %>
    <%= f.input :source_admin_id %>
    <%= f.input :target_admin_id %>
    <%= f.input :accept %>
    <%= f.input :request %>
    <%= f.input :ignor %>
    <%= f.input :remove %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
